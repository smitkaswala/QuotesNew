<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/swipe_gradient"
        android:layout_centerInParent="true">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationSwipe"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_centerHorizontal="true"
            app:lottie_rawRes="@raw/swipe"
            android:layout_marginTop="@dimen/_15sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <TextView
            android:id="@+id/mTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe to read quotes"
            android:fontFamily="@font/poppins"
            android:layout_below="@+id/animationSwipe"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_11sdp"/>

        <Button
            android:id="@+id/mButton"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_below="@+id/mTextView"
            android:text="Got it"
            android:textAllCaps="false"
            android:textSize="@dimen/_11sdp"
            android:background="@color/text_color"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>